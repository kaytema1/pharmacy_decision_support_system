<%= simple_form_for(@questionnaire) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :question %>
    <%= f.input :answer %>
    <%= f.input :comment %>
    <%= f.association :patient %>
    <%= f.association :patient_visit %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
